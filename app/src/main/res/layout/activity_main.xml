<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/my_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="@string/spotify_streamer"
        android:id="@+id/mediaStreamerBtn"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView"
        android:onClick="btnOnClick"
        style="@style/btnMediumCustom" />
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="@string/football_scores"
        android:id="@+id/superDuo1Btn"
        android:layout_below="@+id/mediaStreamerBtn"
        android:onClick="btnOnClick"
        style="@style/btnMediumCustom" />
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="@string/alexandria"
        android:id="@+id/superDuo2Btn"
        android:layout_below="@+id/superDuo1Btn"
        android:onClick="btnOnClick"
        style="@style/btnMediumCustom" />
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="@string/ant_terminator"
        android:id="@+id/antTerminatorBtn"
        android:layout_below="@+id/superDuo2Btn"
        android:onClick="btnOnClick"
        style="@style/btnMediumCustom" />
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="@string/materialize"
        android:id="@+id/materializeBtn"
        android:layout_below="@+id/antTerminatorBtn"
        android:onClick="btnOnClick"
        style="@style/btnMediumCustom" />
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="@string/capstone"
        android:id="@+id/capstoneBtn"
        android:layout_below="@+id/materializeBtn"
        android:onClick="btnOnClick"
        style="@style/btnMediumCustom" />
</RelativeLayout>
